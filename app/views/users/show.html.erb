<center>
<% if notice  %> 
	<p><%= notice %></p>
<% end %>

<% if @user.fio != nil %>
	<%= @user.fio %>|
<% end %>
	
 Логин : <%= @user.name %>

|
<% case @user.role %>
<% when 'administrator' %>
	Администратор
<% when 'teacher' %>
	Преподаватель
<% else %>
	Студент
<% end %>		

<% Course.all.each do |course|  # если создал курсы %>
	<% if course.user.id == session[:user_id] %>
		<br/>
		Курсы пользователя:
	<% end %>
	<% break %>
<% end %>

<% Course.all.each do |course| %>
	<% if course.user.id == session[:user_id] %>
		<%= link_to course.name, course_path(course) %> |
	<% end %> 
<% end %>

<br/>
<br/>
</center>