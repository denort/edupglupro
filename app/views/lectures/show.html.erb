<center>
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Курс:</strong>
	  <%= @lecture.course.name %>
	</p>

	<p>
	  <strong>Преподаватель:</strong>
	  <%= @lecture.course.user.fio %>
	</p>

	<p>
	  <strong>Лекция:</strong>
	  <%= @lecture.name %>
	</p>

	<p>Прикрепленные файлы:</p>
	<% ClippedFile.all.each do |f| %>
		<% if f.lecture_id == @lecture.id %> 
			<% Mime::EXTENSION_LOOKUP.each do |type| %>
				<% if f.content_type.to_s.include?(type[0].to_s) %>
					<%=link_to f.name, clipped_file_path(f)%><br/>
				<% else %>
					<%=link_to f.name, action: :download, controller: :clipped_files, fname: f.name, ftype: f.content_type%><br/>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
			
	<% if @lecture.course.user.id == session[:user_id] %>
		<br/>	
		<%= link_to 'Прикрепить файл',new_clipped_file_path(lecture_id: @lecture.id) %>

	<% end %>
		<br/>
		<br/>
	<%= link_to 'К курсу', course_path(@lecture.course) %>
	
</center>
